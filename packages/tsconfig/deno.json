{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Deno",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "lib": ["deno.window"],
    "module": "esnext",
    "moduleDetection": "force",
    "target": "esnext",
    "useDefineForClassFields": true
  }
}
